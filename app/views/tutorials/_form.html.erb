<%= form_for @tutorial do |f| %>
  <% if @tutorial.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@tutorial.errors.count, "error") %> prohibited this survey from being saved:</h2>
      <ul>
      <% @tutorial.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :tagline %><br />
    <%= f.text_field :tagline %>
  </div>

  <%= f.fields_for :steps do |builder| %>
    <%= render 'step_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Steps", f, :steps %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
